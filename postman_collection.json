{
  "info": {
    "name": "News Aggregator API",
    "description": "API collection for the News Aggregator backend with Laravel Resources",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://news.test/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints using Laravel Sanctum",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            },
            "description": "Register a new user and receive an authentication token"
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            },
            "description": "Login with existing credentials and receive an authentication token"
          },
          "response": []
        },
        {
          "name": "Get Authenticated User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user",
              "host": ["{{base_url}}"],
              "path": ["user"]
            },
            "description": "Get the currently authenticated user's information"
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/logout",
              "host": ["{{base_url}}"],
              "path": ["logout"]
            },
            "description": "Logout the current user and revoke the authentication token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Articles",
      "description": "Article endpoints with search and filter capabilities",
      "item": [
        {
          "name": "Get All Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles",
              "host": ["{{base_url}}"],
              "path": ["articles"]
            },
            "description": "Get paginated list of all articles"
          },
          "response": []
        },
        {
          "name": "Get Single Article",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles/1",
              "host": ["{{base_url}}"],
              "path": ["articles", "1"]
            },
            "description": "Get a single article by ID with its source, category, and author"
          },
          "response": []
        },
        {
          "name": "Search Articles by Keyword",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles?keyword=technology&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "keyword",
                  "value": "technology",
                  "description": "Search in title, description, and content"
                },
                {
                  "key": "per_page",
                  "value": "20",
                  "description": "Number of results per page (max 100)"
                }
              ]
            },
            "description": "Search articles by keyword (uses PostgreSQL full-text search)"
          },
          "response": []
        },
        {
          "name": "Filter Articles by Date Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles?from=2026-01-01&to=2026-01-31",
              "host": ["{{base_url}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "from",
                  "value": "2026-01-01",
                  "description": "Start date (YYYY-MM-DD)"
                },
                {
                  "key": "to",
                  "value": "2026-01-31",
                  "description": "End date (YYYY-MM-DD)"
                }
              ]
            },
            "description": "Filter articles by publication date range"
          },
          "response": []
        },
        {
          "name": "Filter by Multiple Sources",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles?sources[]=1&sources[]=2",
              "host": ["{{base_url}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "sources[]",
                  "value": "1",
                  "description": "Source ID"
                },
                {
                  "key": "sources[]",
                  "value": "2",
                  "description": "Source ID"
                }
              ]
            },
            "description": "Filter articles by one or more source IDs"
          },
          "response": []
        },
        {
          "name": "Filter by Multiple Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles?categories[]=1&categories[]=3",
              "host": ["{{base_url}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "categories[]",
                  "value": "1",
                  "description": "Category ID"
                },
                {
                  "key": "categories[]",
                  "value": "3",
                  "description": "Category ID"
                }
              ]
            },
            "description": "Filter articles by one or more category IDs"
          },
          "response": []
        },
        {
          "name": "Filter by Multiple Authors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles?authors[]=1&authors[]=2",
              "host": ["{{base_url}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "authors[]",
                  "value": "1",
                  "description": "Author ID"
                },
                {
                  "key": "authors[]",
                  "value": "2",
                  "description": "Author ID"
                }
              ]
            },
            "description": "Filter articles by one or more author IDs"
          },
          "response": []
        },
        {
          "name": "Advanced Search (Combined Filters)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/articles?keyword=technology&from=2026-01-01&sources[]=1&categories[]=2&per_page=15",
              "host": ["{{base_url}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "keyword",
                  "value": "technology"
                },
                {
                  "key": "from",
                  "value": "2026-01-01"
                },
                {
                  "key": "sources[]",
                  "value": "1"
                },
                {
                  "key": "categories[]",
                  "value": "2"
                },
                {
                  "key": "per_page",
                  "value": "15"
                }
              ]
            },
            "description": "Combine multiple filters for advanced search"
          },
          "response": []
        }
      ]
    },
